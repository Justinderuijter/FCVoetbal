@model FCVoetbal.ViewModels.EditMatchViewModel

@{
    ViewData["Title"] = "Edit Match";
}

<h1>Edit</h1>

<h4>Match</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Plaats" class="control-label"></label>
                <input asp-for="Plaats" class="form-control" />
                <span asp-validation-for="Plaats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Datum" class="control-label"></label>
                <input asp-for="Datum" type="date" class="form-control" />
                <span asp-validation-for="Datum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThuisTeamId" class="control-label">Thuisteam</label>
                <select asp-for="ThuisTeamId" class="form-control">
                    <option value="0"></option>
                    @foreach (var team in Model.TeamsList)
                    {
                        <option value="@team.ID">@team.Naam</option>
                    }
                </select>
                <span asp-validation-for="ThuisTeamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UitTeamId" class="control-label">Uitteam</label>
                <select asp-for="UitTeamId" class="form-control">
                    <option value="0"></option>
                    @foreach (var team in Model.TeamsList)
                    {
                        <option value="@team.ID">@team.Naam</option>
                    }
                </select>
                <span asp-validation-for="UitTeamId" class="text-danger"></span>
                <div class="form-group">
                    <label asp-for="ThuisDoelpunten" class="control-label"></label>
                    <input asp-for="ThuisDoelpunten" type="number" class="form-control" />
                    <span asp-validation-for="ThuisDoelpunten" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UitDoelpunten" class="control-label"></label>
                    <input asp-for="UitDoelpunten" type="number" class="form-control" />
                    <span asp-validation-for="UitDoelpunten" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}