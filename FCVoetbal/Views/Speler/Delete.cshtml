@model FCVoetbal.ViewModels.SpelerViewModel
@{
    ViewData["Title"] = "Delete";
}
<h1>Delete</h1>
<h2>Weet je zeker dat je deze speler wilt verwijderen?</h2>
<h4>Speler</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Voornaam" class="control-label">Naam</label>
                : @Model.Voornaam @Model.Achternaam
                <span asp-validation-for="Voornaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back To List</a>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
